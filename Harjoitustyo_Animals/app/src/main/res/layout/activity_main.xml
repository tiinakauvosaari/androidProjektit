<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEFD6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="341dp"
        android:layout_height="122dp"
        android:layout_marginTop="20dp"
        android:capitalize="characters"
        android:fontFamily="casual"
        android:freezesText="false"
        android:gravity="center"
        android:text="Animals"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnCreateNew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnCreateNew"
        android:layout_width="190dp"
        android:layout_height="57dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:background="#63B1EA92"
        android:fadingEdge="horizontal"
        android:fontFamily="casual"
        android:gravity="center"
        android:onClick="switchToAddAnimal"
        android:text="Luo uusi el채in"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnMove"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/btnMove"
        android:layout_width="200dp"
        android:layout_height="53dp"
        android:layout_marginBottom="40dp"
        android:background="#63B1EA92"
        android:fontFamily="casual"
        android:gravity="center"
        android:onClick="switchToMove"
        android:text="Siirr채 el채imi채"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateNew" />

    <TextView
        android:id="@+id/btnSave"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:background="#63B1EA92"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Tallenna tiedostoon"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMove" />

    <TextView
        android:id="@+id/btnList"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="#63B1EA92"
        android:fontFamily="casual"
        android:gravity="center"
        android:onClick="switchToListAnimals"
        android:text="Listaa"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSave" />

    <TextView
        android:id="@+id/btnStart"
        android:layout_width="200dp"
        android:layout_height="49dp"
        android:layout_marginTop="40dp"
        android:background="#63B1EA92"
        android:fontFamily="casual"
        android:gravity="center"
        android:onClick="switchToStart"
        android:text="Aloita"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnList"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>