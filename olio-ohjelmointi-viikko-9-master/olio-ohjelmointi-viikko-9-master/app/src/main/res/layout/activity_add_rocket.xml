<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRocketActivity">

    <RadioGroup
        android:id="@+id/rgRocketType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbStarship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Starship" />

        <RadioButton
            android:id="@+id/rbSls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Space Launch System" />

        <RadioButton
            android:id="@+id/rbAriane6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ariane6" />
    </RadioGroup>

    <Button
        android:id="@+id/btnAddNewRocket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="addRocket"
        android:text="Lisää raketti"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgRocketType" />
</androidx.constraintlayout.widget.ConstraintLayout>